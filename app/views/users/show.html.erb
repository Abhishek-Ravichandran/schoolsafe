<% provide(:title, @user.name) %>
<div class="container">
  <div class="row" style="margin-top: 5%; margin-left: 1%">
    <div class="col-md-1">
      <%= gravatar_for @user %>
    </div>
    <div class="col-md-3">
      <h3 style="text-align:left">
        <%= @user.name %>
      </h3>
      <% if logged_in? %>
        <% if current_user.id == @user.id %>
          <%= link_to 'Update your Profile', edit_user_path(@user), class: "btn btn-primary" %>
        <% end %>
      <% end %>
    </div>
    <div class="col-mid-8">
      <%= render partial: 'description', object: @user.description %>
    </div>
  </div>
  <div class="row">
    <div class="col-mid-12">
      <h3 style="text-align:center">
        Reviews
      </h3>
    </div>
    <div class="col-mid-12" id="user-reviews-list">
      <%= render partial: 'reviews', object: @user.reviews %>
    </div>
  </div>
  <div class="row">
    <div class="col-mid-12">
      <h3 style="text-align: center">
        Bookmarked Schools
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-mid-12" id="user-bookmarks-list">
      <%= render partial: 'favorites', object: @user.favorites %>
    </div>
  </div>
</div>


